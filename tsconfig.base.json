{
  "compilerOptions": {
    "module": "preserve",
    "target": "es2022",
    "lib": ["es2022"],

    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "emitDeclarationOnly": true,

    "composite": true,
    "declarationMap": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true
  }
}
